		{
			"name": "Create Statement",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const body = pm.response.json();",
							"",
							"pm.test(\"Status code is 201\", () => {",
							"  pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test(\"Body does contain PUID\", () => {",
							"  pm.expect(body).to.have.property('puid');",
							"});",
							"",
							"pm.test(\"Body does contain UUID\", () => {",
							"  pm.expect(body).to.have.property('uuid');",
							"});",
							"",
							"pm.environment.set(\"statement_uuid\", body.uuid);",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"let automated_decision = \"AUTOMATED_DECISION_FULLY\";",
							"let r = Math.random();",
							"if (r < 0.666) {",
							"    automated_decision = \"AUTOMATED_DECISION_PARTIALLY\";",
							"}",
							"if (r < 0.333) {",
							"    automated_decision = \"AUTOMATED_DECISION_NOT_AUTOMATED\";",
							"}",
							"",
							"",
							"pm.variables.set('automated_decision', automated_decision);",
							"",
							"let automated_detection = \"No\";",
							"if (Math.random() < 0.5) {",
							"    automated_detection = \"Yes\";",
							"}",
							"pm.variables.set('automated_detection', automated_detection);",
							"",
							"",
							"let incompatible_content_illegal = \"No\";",
							"if (Math.random() < 0.5) {",
							"    incompatible_content_illegal = \"Yes\";",
							"}",
							"pm.variables.set('incompatible_content_illegal', incompatible_content_illegal);",
							"",
							"let today = new Date();",
							"let application_date = today.getFullYear() + \"-\" + ",
							"    ('0' + (today.getMonth() + 1)).slice(-2) + \"-\" + ",
							"    ('0' + today.getDate()).slice(-2) + \"-\" + ",
							"    ('0' + today.getHours()).slice(-2);",
							"pm.variables.set('application_date', application_date);",
							"pm.variables.set('content_date', application_date);",
							"",
							"const languages = [",
							"        'EN',",
							"        'BG',",
							"        'HR',",
							"        'CS',",
							"        'DA',",
							"        'NL',",
							"        'ET',",
							"        'FI',",
							"        'FR',",
							"        'DE',",
							"        'EL',",
							"        'HU',",
							"        'GA',",
							"        'IT',",
							"        'LV',",
							"        'LT',",
							"        'MT',",
							"        'PL',",
							"        'PT',",
							"        'RO',",
							"        'SK',",
							"        'SL',",
							"        'ES',",
							"        'SV',",
							"    ];",
							"pm.variables.set('content_language', languages[Math.floor((Math.random() * languages.length))]);",
							"",
							"let end_date = '';",
							"if (Math.random() < 0.5) {",
							"    var six_months = new Date();",
							"    six_months.setMonth(six_months.getMonth()+6);",
							"    end_date = six_months.getFullYear() + \"-\" + ",
							"    ('0' + (six_months.getMonth() + 1)).slice(-2) + \"-\" + ",
							"    ('0' + six_months.getDate()).slice(-2) + \"-\" + ",
							"    ('0' + six_months.getHours()).slice(-2);",
							"}",
							"pm.variables.set('end_date', end_date);",
							"",
							"const source_types = [",
							"    \"SOURCE_ARTICLE_16\",",
							"    \"SOURCE_TRUSTED_FLAGGER\",",
							"    \"SOURCE_VOLUNTARY\"",
							"];",
							"pm.variables.set('source_type', source_types[Math.floor((Math.random() * source_types.length))]);",
							"",
							"",
							"const account_types = [",
							"    \"ACCOUNT_TYPE_BUSINESS\",",
							"    \"ACCOUNT_TYPE_PRIVATE\"",
							"];",
							"pm.variables.set('account_type', account_types[Math.floor((Math.random() * account_types.length))]);",
							"",
							"",
							"",
							"const european_country_codes = [",
							"        'AT',",
							"        'BE',",
							"        'BG',",
							"        'CY',",
							"        'CZ',",
							"        'DE',",
							"        'DK',",
							"        'EE',",
							"        'ES',",
							"        'FI',",
							"        'FR',",
							"        'GR',",
							"        'HR',",
							"        'HU',",
							"        'IE',",
							"        'IS',",
							"        'IT',",
							"        'LI',",
							"        'LT',",
							"        'LU',",
							"        'LV',",
							"        'MT',",
							"        'NL',",
							"        'NO',",
							"        'PL',",
							"        'PT',",
							"        'RO',",
							"        'SE',",
							"        'SI',",
							"        'SK'",
							"    ];",
							"",
